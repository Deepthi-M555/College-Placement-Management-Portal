<!DOCTYPE html>
<html>
<head>
  <title>Resume Builder</title>

  <!-- Builder CSS -->
  <link rel="stylesheet" href="/resume/public/builder.css">

  <!-- SortableJS for drag & drop -->
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

  <style>
    body { margin: 0; font-family: Arial, sans-serif; }

    .builder-container {
      display: flex;
      height: calc(100vh - 60px);
      overflow: hidden;
    }

    .left-panel {
      width: 35%;
      overflow-y: auto;
      padding: 20px;
      background: #f5f5f5;
      border-right: 1px solid #ddd;
    }

    .right-panel {
      width: 65%;
      background: #eee;
      padding: 0;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      background: white;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .toolbar {
      display: flex;
      justify-content: space-between;
      padding: 15px;
      background: white;
      border-bottom: 1px solid #ddd;
      height: 60px;
      box-sizing: border-box;
    }

    .btn {
      padding: 10px 16px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      margin-right: 10px;
      background: #246bfd;
      color: white;
      font-weight: bold;
    }

    .section-card {
      background: white;
      padding: 15px;
      margin-bottom: 15px;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0,0,0,0.08);
    }

    .section-title {
      font-weight: bold;
      margin-bottom: 10px;
    }

    .drag-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgb(255, 255, 255);
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      cursor: grab;
      box-shadow: 0 0 4px rgba(0,0,0,0.05);
    }

    .drag-handle {
      cursor: grab;
      font-size: 20px;
      padding: 0 5px;
      user-select: none;
    }

    .input {
      width: 100%;
      padding: 8px;
      margin-top: 6px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
  </style>
</head>

<body>

  <!-- ✅ TOP TOOLBAR -->
  <div class="toolbar">
    <div>
      <button class="btn" onclick="downloadPDF()">Download PDF</button>
      <button class="btn" onclick="saveResume()">Save</button>
      <button class="btn" onclick="scoreResume()">ATS Score</button>
    </div>

    <select id="templateSelect" onchange="changeTheme(this.value)">
      <% themes.forEach(t => { %>
        <option value="<%= t %>"><%= t %></option>
      <% }) %>
    </select>
  </div>

  <!-- ✅ MAIN CONTAINER -->
  <div class="builder-container">

    <!-- ✅ LEFT PANEL -->
    <div class="left-panel">

      <h2>Drag to Reorder Sections</h2>
      <div id="dragList">

        <% resume.sections.forEach(sec => { %>

          <div class="drag-item" data-id="<%= sec.id %>">
            <span><%= sec.name %></span>
            <span class="drag-handle">⋮⋮</span>
          </div>

        <% }) %>

      </div>

      <hr style="margin: 20px 0;">

      <!-- ✅ Dynamic Section Cards -->
      <div id="sectionInputs">

        <!-- Summary -->
        <div class="section-card" data-id="summary">
          <div class="section-title">Professional Summary</div>
          <textarea id="summary" placeholder="Professional Summary" class="input"></textarea>
        </div>

        <!-- Skills -->
        <div class="section-card" data-id="skills">
          <div class="section-title">Skills</div>
          <textarea id="skills" placeholder="Skill1, Skill2, Skill3" class="input"></textarea>
        </div>

        <!-- Experience -->
        <div class="section-card" data-id="experience">
          <div class="section-title">Experience</div>
          <textarea id="experience" placeholder="Experience details..." class="input"></textarea>
        </div>

        <!-- Projects -->
        <div class="section-card" data-id="projects">
          <div class="section-title">Projects</div>
          <textarea id="projects" placeholder="Projects details..." class="input"></textarea>
        </div>
      </div>

      <!-- ✅ AI Skill Suggestion -->
      <div class="section-card">
  <div class="section-title">AI Skill Suggestion</div>

  <textarea id="aiInput"
            placeholder="Paste resume text/job description…"
            class="input"></textarea>

  <button class="btn" onclick="analyzeText()">Analyze & Suggest</button>

  <!-- ✅ AI Output Box -->
  <div id="aiOutputBox"
       style="
         margin-top: 15px;
         padding: 12px;
         background: #fff;
         border-radius: 8px;
         border: 1px solid #ddd;
         display: none;
         white-space: pre-line;
       ">
  </div>
</div>


      <!-- ✅ Job Match -->
      <div class="section-card">
        <div class="section-title">Job Match %</div>
        <textarea id="jobDesc" placeholder="Paste Job Description…" class="input"></textarea>
        <button class="btn" onclick="jobMatch()">Check Match %</button>
        <div id="jobMatchBox"
     style="
       margin-top: 15px;
       padding: 12px;
       background: #fff;
       border: 1px solid #ddd;
       border-radius: 8px;
       display: none;
     ">
</div>

    
    </div>

    </div>

    <!-- ✅ RIGHT PANEL (Preview) -->
    <div class="right-panel">
      <iframe id="previewFrame" src="/resume/preview/temp"></iframe>
    </div>
  </div>

  <!-- ✅ SAFE JSON injection -->
  <div id="resumeDataContainer"
       data-json="<%= JSON.stringify(resume || {}) %>"
       style="display:none">
  </div>

  <!-- ✅ Builder script -->
  <script src="/resume/public/builder.js"></script>

  <script>
    // ✅ Enable drag and drop ordering
    new Sortable(document.getElementById("dragList"), {
      animation: 150,
      handle: ".drag-handle",
      onEnd: function () {
        const items = document.querySelectorAll(".drag-item");
        const newOrder = [];

        items.forEach(item => {
          newOrder.push(item.getAttribute("data-id"));
        });

        // Send new order to builder.js
        window.postMessage({ type: "reorder", order: newOrder }, "*");
      }
    });
  </script>

</body>
</html>
