<!DOCTYPE html>
<html>
<head>
  <title>TPO â€“ Signup</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="center">
    <div class="card">
      <h1>TPO Signup</h1>

      <% if (errors && errors.length) { %>

        <div class="error">
          <% errors.forEach(e => { %><p><%= e.msg %></p><% }) %>
        </div>
      <% } %>

      <form method="POST" action="/tpo/signup" class="form">
        <label>Name</label>
        <input type="text" name="name" value="<%= (old && old.name) || '' %>" required>

        <label>Email</label>
        <input type="email" name="email" value="<%= (old && old.email) || '' %>" required>

        <label>Password</label>
        <input type="password" name="password" required>

        <button class="btn" type="submit">Create Account</button>
      </form>

      <p class="muted">
        Already registered? <a href="/tpo/login">Login</a>
      </p>
    </div>
  </div>
</body>
</html>
