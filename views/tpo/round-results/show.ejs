<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= drive.company %> — Round Results</title>
  <link href="https://unpkg.com/@picocss/pico@2/css/pico.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      background: #f9fafb;
      font-family: "Inter", system-ui, sans-serif;
    }
    main {
      max-width: 950px;
      margin: 2rem auto;
      background: #fff;
      padding: 2rem;
      border-radius: .75rem;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
    }
    h1 {
      color: #2563eb;
      text-align: center;
      margin-bottom: .25rem;
    }
    p.subtitle {
      text-align: center;
      color: #6b7280;
      margin-bottom: 1.5rem;
    }
    .meta {
      text-align: center;
      color: #6b7280;
      font-size: .9rem;
      margin-bottom: 2rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
    }
    th, td {
      padding: 0.75rem;
      border-bottom: 1px solid #e5e7eb;
      text-align: left;
    }
    th {
      background: #f9fafb;
      color: #374151;
      font-weight: 600;
    }
    .badge {
      display: inline-block;
      padding: 0.3rem 0.75rem;
      border-radius: 999px;
      font-weight: 600;
      font-size: 0.8rem;
    }
    .active { background: #dcfce7; color: #166534; }
    .completed { background: #f3f4f6; color: #6b7280; }
    .back {
      text-decoration: none;
      background: #2563eb;
      color: white;
      padding: 0.5rem 1.2rem;
      border-radius: 0.5rem;
    }
    .chart-wrap {
      background: #f3f4f6;
      border-radius: .75rem;
      padding: 1rem;
    }
  </style>
</head>
<body>
  <main>
    <h1><%= drive.company %></h1>
    <p class="subtitle"><%= drive.title %></p>
    <p class="meta">
      Mode: <%= drive.mode %> |
      Venue: <%= drive.venue || "Not specified" %> |
      Status:
      <span class="badge <%= drive.isActive ? 'active' : 'completed' %>">
        <%= drive.isActive ? "Active" : "Completed" %>
      </span>
    </p>

    <h2>Rounds Overview</h2>
    <% if (!drive.rounds || drive.rounds.length === 0) { %>
      <p>No rounds have been added yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Round Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Total</th>
            <th>Selected</th>
            <th>Rejected</th>
            <th>Remarks</th>
          </tr>
        </thead>
        <tbody>
          <% drive.rounds.forEach(r => { %>
            <tr>
              <td><%= r.roundName %></td>
              <td><%= r.roundType || '—' %></td>
              <td><%= r.date ? new Date(r.date).toLocaleDateString() : '—' %></td>
              <td><%= r.totalParticipants || 0 %></td>
              <td><%= (r.selectedStudents || []).length %></td>
              <td><%= (r.rejectedStudents || []).length %></td>
              <td><%= r.remarks || '—' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="chart-wrap">
        <h3 style="text-align:center;">Round Selection Distribution</h3>
        <canvas id="roundChart" height="120"></canvas>
      </div>
    <% } %>

    <div style="text-align:center; margin-top:2rem;">
      <a href="/tpo/round-results" class="back">← Back to All Rounds</a>
    </div>
  </main>

  <script id="driveData" type="application/json">
    <%- JSON.stringify(drive) %>
  </script>

  <script>
    (function() {
      const drive = JSON.parse(document.getElementById("driveData").textContent || "{}");
      if (!drive.rounds || !drive.rounds.length) return;

      const labels = drive.rounds.map(r => r.roundName);
      const selected = drive.rounds.map(r => (r.selectedStudents || []).length);
      const rejected = drive.rounds.map(r => (r.rejectedStudents || []).length);

      const ctx = document.getElementById('roundChart');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels,
          datasets: [
            { label: 'Selected', data: selected, backgroundColor: 'rgba(34,197,94,0.7)' },
            { label: 'Rejected', data: rejected, backgroundColor: 'rgba(239,68,68,0.7)' }
          ]
        },
        options: {
          responsive: true,
          plugins: { legend: { position: 'top' } },
          scales: { y: { beginAtZero: true } }
        }
      });
    })();
  </script>
</body>
</html>
