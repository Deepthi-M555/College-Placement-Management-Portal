<!DOCTYPE html>
<html>
<head>
  <title>Manage Companies</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      padding: 30px;
    }
    h1 {
      color: #007bff;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      margin-top: 20px;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background: #007bff;
      color: white;
    }
    a.btn, button.btn {
      background: #007bff;
      color: white;
      padding: 8px 12px;
      border-radius: 5px;
      text-decoration: none;
      border: none;
      cursor: pointer;
    }
    a.btn:hover, button.btn:hover {
      background: #0056b3;
    }
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="top-bar">
    <h1>Company Management</h1>
    <a href="/tpo/companies/new" class="btn">+ Add New Company</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>Company Name</th>
        <th>Role</th>
        <th>Package</th>
        <th>Eligibility</th>
        <th>Last Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (companies.length > 0) { %>
        <% companies.forEach(c => { %>
          <tr>
            <td><%= c.name %></td>
            <td><%= c.role %></td>
            <td><%= c.package %></td>
            <td><%= c.eligibilityCriteria %></td>
            <td><%= c.lastDateToApply ? c.lastDateToApply.toDateString() : '-' %></td>
            <td>
              <a href="/tpo/companies/edit/<%= c._id %>" class="btn">Edit</a>
              <form action="/tpo/companies/delete/<%= c._id %>" method="POST" style="display:inline;">
                <button class="btn" style="background:red;">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="6" style="text-align:center;">No companies added yet</td></tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
