<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
</head>
<body>
    <h1>Student Dashboard</h1>

<!-- ✅ Profile Completion Status -->
<% if (!profileComplete) { %>
  <p style="color: red;">⚠ Your profile is incomplete! Please update it.</p>
<% } else { %>
  <p style="color: green;">✅ Profile Completed</p>
<% } %>

<!-- ✅ Drives List -->
<h2>Available Drives</h2>
<ul>
  <% drives.forEach(drive => { %>
    <li><%= drive.companyName %> - <%= drive.role %></li>
  <% }) %>
</ul>

<!-- ✅ Applied Drives -->
<h2>Your Applications</h2>
<ul>
  <% applications.forEach(app => { %>
    <li>
      <%= app.driveId.companyName %> - Status: <%= app.status %>
    </li>
  <% }) %>
</ul>

</body>
</html>