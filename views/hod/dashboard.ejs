<!-- views/hod/dashboard.ejs -->
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>HOD Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    body{font-family: Arial;padding:24px}
    .grid{display:flex;gap:16px;flex-wrap:wrap}
    .card{padding:18px;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.08);min-width:200px;text-align:center}
    .btn{display:inline-block;padding:8px 12px;border-radius:6px;background:#3b82f6;color:#fff;text-decoration:none}
  </style>
</head>
<body>
  <h1>HOD Dashboard</h1>
  <div class="grid">
    <div class="card">
      <h3>Approvals</h3>
      <p>Approve or reject new student signups</p>
      <a class="btn" href="/hod/approvals">Open Approvals</a>
    </div>

    <div class="card">
      <h3>Reports</h3>
      <p>Department reports (coming soon)</p>
      <a class="btn" href="/hod/reports">Open</a>
    </div>

    <div class="card">
      <h3>Analytics</h3>
      <p>Placement analytics (coming soon)</p>
      <a class="btn" href="/hod/analytics">Open</a>
    </div>
  </div>
</body>
</html>
